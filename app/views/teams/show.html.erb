<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>
<table>
  <thead>
    <tr>
      <th>Members</th>
      <!-- <th>Team</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <!-- <td><%#= member.team.name %></td> -->
