<p id="notice"><%= notice %></p>

<h1>Tournament participation applications</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Tournament</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournament_teams.each do |tournament_team| %>
      <tr>
        <td><%= tournament_team.team.name %></td>
        <td><%= tournament_team.tournament.name %></td>
        <td><%= link_to 'Show', tournament_team %></td>
        <td><%= link_to 'Edit', edit_tournament_team_path(tournament_team) %></td>
        <td><%= link_to 'Destroy', tournament_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

