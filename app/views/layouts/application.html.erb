<!DOCTYPE html>
<html>
  <head>
    <title>TestTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <h1>
        <%= link_to "Teams", teams_path, class: "menu-link" %>
        <%= link_to "Tournaments", tournaments_path, class: "menu-link" %>
        <%= link_to "Log out", destroy_user_session_path, method: "delete", style: "float: right;", class: "menu-link" %>
      </h1>
    <% end %>

    <%= yield %>
  </body>
</html>
